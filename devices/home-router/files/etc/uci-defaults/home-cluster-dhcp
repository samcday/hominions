# Static DHCP leases for home-cluster nodes.

set -uexo pipefail

uci -q batch <<EOI
add dhcp host
set dhcp.@host[-1].name='m710q-1'
set dhcp.@host[-1].mac='6c:4b:90:50:9f:0d'
set dhcp.@host[-1].ip='10.0.1.10'
set dhcp.@host[-1].tag='home-cluster'

add dhcp host
set dhcp.@host[-1].name='m710q-2'
set dhcp.@host[-1].mac='6c:4b:90:54:2d:65'
set dhcp.@host[-1].ip='10.0.1.11'
set dhcp.@host[-1].tag='home-cluster'

commit dhcp
EOI

service dnsmasq restart
